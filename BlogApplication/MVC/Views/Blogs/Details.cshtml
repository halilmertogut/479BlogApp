@model BlogModel
@{
    ViewData["Title"] = "Blog Details";
}

<h1>@Model.Name</h1>
<p>@Model.Description</p>
<p>Created At: @Model.CreatedAt</p>
<p>Updated At: @Model.UpdatedAt</p>

<h2>Posts</h2>
<p>
    <a asp-action="AddPost" asp-route-id="@Model.Id" class="btn btn-primary">Add Post</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Content</th>
            <th>Created At</th>
            <th>Updated At</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model.Posts)
        {
            <tr>
                <td>@post.Title</td>
                <td>@post.Content</td>
                <td>@post.CreatedAt</td>
                <td>@post.UpdatedAt</td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@post.Id" asp-controller="Posts" class="btn btn-secondary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@post.Id" asp-controller="Posts" class="btn btn-danger">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
